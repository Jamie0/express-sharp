// https://github.com/microsoft/TypeScript-Node-Starter

{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": [
    "index.ts",
    "src/**/*",
    "example/**/*",
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
